{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "winsper",
  "version": "0.1.0",
  "identifier": "com.linpa.winsper",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Winsper",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "overlay",
        "title": "Winsper Overlay",
        "width": 300,
        "height": 80,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "visible": false,
        "skipTaskbar": true,
        "center": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
